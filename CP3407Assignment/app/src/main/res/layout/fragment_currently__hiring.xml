<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.current_hire.Currently_Hiring">

    <TextView
        android:id="@+id/Currently_Hiring_Page_Text"
        android:layout_width="296dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:text="Currently Hiring"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Currently_Hiring_Recycle"
        android:layout_width="390dp"
        android:layout_height="620dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Currently_Hiring_Page_Text" />
</androidx.constraintlayout.widget.ConstraintLayout>