<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dogs.DashboardFragment">

        <!--    Display current dogs out for hire-->


        <!--    Dog hire wishlist-->


        <!--    Hire a dog out-->

        <TextView
            android:id="@+id/doggo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Doggos"
            android:textSize="30sp"
            app:flow_verticalAlign="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/contact_title_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dividerInsetEnd="18dp"
            app:dividerInsetStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doggo_title" />

        <ImageView
            android:id="@+id/create_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/create_doggo_listing_icon"
            app:layout_constraintEnd_toStartOf="@+id/create_listing"
            app:layout_constraintTop_toBottomOf="@+id/doggo_title"
            app:srcCompat="@drawable/create_ic" />

        <Button
            android:id="@+id/create_listing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:text="@string/create_dog_listing"
            app:layout_constraintBottom_toBottomOf="@+id/create_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/contact_title_divider"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Currently_Hiring_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="View Currently Hired Dogs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_listing" />

        <Button
            android:id="@+id/Previously_Hired_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="VIEW PREVIOUSLY HIRED DOGS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Currently_Hiring_Button" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>