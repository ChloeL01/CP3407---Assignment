<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_details_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:text="@string/contact_details"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/contact_title_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact_title" />

        <Button
            android:id="@+id/email_address"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:text="Email address\nexample@email.com"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:typeface="normal"
            app:layout_constraintStart_toEndOf="@+id/email_ic"
            app:layout_constraintTop_toBottomOf="@+id/contact_title_divider" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/email_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_address" />

        <Button
            android:id="@+id/phone_number"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="start"
            android:text="Phone number\n0123456789"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:typeface="normal"
            app:layout_constraintStart_toEndOf="@+id/phone_ic"
            app:layout_constraintTop_toBottomOf="@+id/email_divider" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/phone_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_number" />

        <ImageView
            android:id="@+id/email_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@+id/email_address"
            app:layout_constraintStart_toStartOf="@+id/contact_title"
            app:layout_constraintTop_toTopOf="@+id/email_address"
            app:srcCompat="@drawable/ic_email_24" />

        <ImageView
            android:id="@+id/phone_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/phone_number"
            app:layout_constraintStart_toStartOf="@+id/email_ic"
            app:layout_constraintTop_toTopOf="@+id/phone_number"
            app:srcCompat="@drawable/ic_phone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>